<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="org.ctdworld.propath.fragment.DashDialogEducationReviewOptions"
    android:orientation="vertical"
    android:background="@drawable/border_white_2dp_round_10dp"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_16"
    android:backgroundTint="@color/colorWhite">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Progress Review"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dash_dialog_education_review_btn_self_review"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/border_transparent_2dp_round_10dp"
            android:layout_marginTop="@dimen/dp_40"
            android:text="Self Review"
            android:padding="@dimen/dp_30"
            android:textSize="@dimen/sp_12"/>

        <Button
            android:id="@+id/dash_dialog_education_review_btn_school_review"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/border_transparent_2dp_round_10dp"
            android:layout_marginTop="@dimen/dp_40"
            android:text="School Review"
            android:padding="@dimen/dp_30"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_16"/>
    </LinearLayout>

</LinearLayout>
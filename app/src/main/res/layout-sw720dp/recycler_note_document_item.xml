<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPageBg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@color/colorPageBg">

        <ImageView
            style="@style/StyleImageLightTheme"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:id="@+id/documentsNotesIcon"
            android:tint="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_unit_notes"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/documentsNotesIcon"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            android:id="@+id/documents_notes_title"
            android:text="title"
            android:textColor="@color/colorDarkBlack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/documentsNotesIcon"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:layout_below="@+id/documents_notes_title"
            android:layout_marginTop="@dimen/dp_5"
            android:text="14-09-2018 "
            android:id="@+id/dateDocuments"
            android:textColor="@color/colorDarkGrey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/documents_notes_title"
            android:layout_toRightOf="@+id/dateDocuments"
            android:text="5:16 p.m. "
            android:textColor="@color/colorDarkGrey"/>
    </RelativeLayout>

</LinearLayout>
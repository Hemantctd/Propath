<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:background="@color/colorWhite">

   <TextView
       android:id="@+id/recycler_group_profile_txt_total_participants"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text=" Participants"
       android:textSize="@dimen/sp_18"
       android:textColor="@color/colorTextBlack"/>


    <RelativeLayout
        android:id="@+id/recycler_group_profile_layout_add_participants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16">

        <ImageView
            style="@style/StyleImageLightTheme"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:src="@drawable/ic_add_to_group"
            android:id="@+id/participantsIcon"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/participantsIcon"
            android:text="Add Participants"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/colorTextBlack"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_regular"
            android:textSize="@dimen/sp_18"
            android:gravity="center"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:background="@color/colorGrey"
        />
</LinearLayout>
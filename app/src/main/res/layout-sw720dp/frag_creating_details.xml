<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:id="@+id/creator_details"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".fragment.FragCreatingDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--creator profile pic-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_pic"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"/>


        <!--creator details-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/img_profile_pic"
            android:layout_toRightOf="@id/img_profile_pic"
            android:layout_marginLeft="@dimen/paddingMarginLeftRightAllPages"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/paddingMarginLeftRightAllPages">

            <TextView
                android:id="@+id/txt_creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/colorTextBlack"/>



            <TextView
                android:id="@+id/txt_created_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorTextBlack"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_creator_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorTextBlack"
                android:layout_marginTop="@dimen/dp_5"/>

            <TextView
                android:id="@+id/txt_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorTextBlack"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>


    </RelativeLayout>

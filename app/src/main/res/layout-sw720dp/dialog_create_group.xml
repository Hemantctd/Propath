<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="org.ctdworld.propath.fragment.DialogCreateGroup"
    android:padding="@dimen/dp_24"
    android:background="@drawable/bg_white_round_15_dp">


    <EditText
        android:id="@+id/create_group_edit_group_name"
        style="@style/StyleEdit"
        android:hint="@string/enter_group_name"/>

    <TextView
        android:id="@+id/btn_save"
        style="@style/StyleTextView"
        android:textSize="@dimen/sp_18"
        android:layout_below="@id/create_group_edit_group_name"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/save"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorTheme"/>

    <TextView
        android:id="@+id/btn_cancel"
        style="@style/StyleTextView"
        android:textSize="@dimen/sp_18"
        android:layout_alignBaseline="@id/btn_save"
        android:text="@string/cancel"
        android:layout_marginRight="@dimen/dp_24"
        android:textColor="@color/colorTheme"
        android:layout_toLeftOf="@id/btn_save"
        />




</RelativeLayout>
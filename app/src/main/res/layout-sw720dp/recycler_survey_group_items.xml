<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_light_grey_1dp"
        android:layout_marginTop="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_5">

        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/StyleImageLightTheme"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/group_image"
            android:src="@drawable/ic_profile"
            android:tint="@color/colorIconLightTheme"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="@dimen/sp_18"
            android:id="@+id/groupName"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/group_image"
            android:textColor="@color/colorDarkBlack"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/groupCheck"
            android:buttonTint="@color/colorIconLightTheme"

            />

    </RelativeLayout>


</LinearLayout>
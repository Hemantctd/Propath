<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ctdworld.propath.activity.ActivityEducationSelfReviewCreate"
    android:background="@color/colorWhite">


    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/footerHeight">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom_light_grey_1dp">

                        <RelativeLayout
                            android:id="@+id/school_review_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_18">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/self_review_img_profile"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_60"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_profile"
                                android:tint="@color/colorIconLightTheme" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_16"
                                android:layout_toRightOf="@id/self_review_img_profile"
                                android:layout_marginStart="@dimen/dp_16"
                                android:layout_toEndOf="@id/self_review_img_profile">

                                <TextView
                                    android:id="@+id/self_review_txt_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/athlete_name"
                                    android:textColor="@color/colorTextBlack"
                                    android:textSize="@dimen/sp_18"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/role"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/self_review_txt_user_name"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:text="@string/role"
                                    android:textColor="@color/colorTextBlack"
                                    android:textSize="@dimen/sp_13"
                                    />

                                <TextView
                                    android:id="@+id/created_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/role"
                                    android:layout_marginTop="@dimen/dp_2"
                                    android:text="@string/created_date"
                                    android:textColor="@color/colorTextBlack"
                                    android:textSize="@dimen/sp_13"
                                    />


                            </RelativeLayout>
                        </RelativeLayout>

                        <!--      <RelativeLayout
                                  android:id="@+id/comments_given_by_athlete_self_layout"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/school_review_layout"
                                  android:layout_marginTop="@dimen/dp_20"
                                  android:layout_marginBottom="@dimen/dp_16"
                                >


                                  <RelativeLayout
                                      style="@style/StyleEditContainer">
                                      <ImageView
                                          android:id="@+id/img_mic"
                                          style="@style/StyleEditImgInContainer"
                                          android:src="@drawable/ic_mic"
                                          android:layout_alignParentRight="true"
                                          android:padding="@dimen/dp_8"/>


                                      <EditText
                                          style="@style/StyleEditInContainer"
                                          android:id="@+id/comments_given_by_athlete_self"
                                          android:hint="comment"
                                          android:textSize="@dimen/txtSize"
                                          android:textColorHint="@color/colorDarkGrey"
                                          android:textColor="@color/colorTextBlack"
                                          android:layout_toLeftOf="@id/img_mic"
                                           />
                                  </RelativeLayout>
                              </RelativeLayout>

                              <RelativeLayout
                                  android:id="@+id/layout_summary"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/comments_given_by_athlete_self_layout"
                                  android:layout_marginTop="@dimen/dp_5"
                                  android:layout_marginBottom="@dimen/dp_5"
                                  >
                                  <RelativeLayout
                                      style="@style/StyleEditContainer">
                                      <ImageView
                                          android:id="@+id/img_mic_summary"
                                          style="@style/StyleEditImgInContainer"
                                          android:src="@drawable/ic_mic"
                                          android:layout_alignParentRight="true"
                                          android:padding="@dimen/dp_8"/>


                                      <EditText
                                          android:id="@+id/summary_edit"
                                          style="@style/StyleEditInContainer"
                                          android:hint="Summary"
                                          android:textSize="@dimen/txtSize"
                                          android:textColorHint="@color/colorDarkGrey"
                                          android:textColor="@color/colorTextBlack"
                                          android:layout_toLeftOf="@id/img_mic_summary"

                                          />
                                  </RelativeLayout>
                              </RelativeLayout>-->

                        <RelativeLayout
                            android:id="@+id/layout_strength"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/school_review_layout"
                            android:layout_marginTop="@dimen/dp_40"
                            android:layout_marginBottom="@dimen/dp_5"
                            >

                            <TextView
                                android:id="@+id/strength_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/strengths"
                                android:textColor="@color/colorTheme"
                                android:textSize="@dimen/txtSize"
                                android:layout_marginBottom="@dimen/dp_5"/>

                            <RelativeLayout
                                style="@style/StyleEditContainer"
                                android:layout_below="@+id/strength_text">
                                <ImageView
                                    android:id="@+id/img_mic_strength"
                                    style="@style/StyleEditImgInContainer"
                                    android:src="@drawable/ic_mic"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/dp_8"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />


                                <EditText
                                    android:id="@+id/strength_edit"
                                    style="@style/StyleEditInContainer"
                                    android:hint="@string/strengths_desc"
                                    android:textSize="@dimen/txtSize"
                                    android:textColorHint="@color/colorDarkGrey"
                                    android:textColor="@color/colorTextBlack"
                                    android:layout_toLeftOf="@id/img_mic_strength"
                                    android:inputType="text"
                                    tools:ignore="Autofill"
                                    android:layout_toStartOf="@id/img_mic_strength" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_improvements"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_strength"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            >

                            <TextView
                                android:id="@+id/improvements_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/improvements"
                                android:textSize="@dimen/txtSize"
                                android:textColor="@color/colorTheme"
                                android:layout_marginBottom="@dimen/dp_5"/>

                            <RelativeLayout
                                style="@style/StyleEditContainer"
                                android:layout_below="@+id/improvements_text">
                                <ImageView
                                    android:id="@+id/img_mic_improvement"
                                    style="@style/StyleEditImgInContainer"
                                    android:src="@drawable/ic_mic"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/dp_8"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />


                                <EditText
                                    android:id="@+id/improvement_edit"
                                    style="@style/StyleEditInContainer"
                                    android:hint="@string/improvements_desc"
                                    android:textSize="@dimen/txtSize"
                                    android:textColorHint="@color/colorDarkGrey"
                                    android:textColor="@color/colorTextBlack"
                                    android:layout_toLeftOf="@id/img_mic_improvement"
                                    android:inputType="text"
                                    tools:ignore="Autofill"
                                    android:layout_toStartOf="@id/img_mic_improvement" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_suggestion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_improvements"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            >

                            <TextView
                                android:id="@+id/suggestion_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/suggestions"
                                android:textSize="@dimen/txtSize"
                                android:textColor="@color/colorTheme"
                                android:layout_marginBottom="@dimen/dp_5"/>

                            <RelativeLayout
                                style="@style/StyleEditContainer"
                                android:layout_below="@+id/suggestion_text">
                                <ImageView
                                    android:id="@+id/img_mic_suggestion"
                                    style="@style/StyleEditImgInContainer"
                                    android:src="@drawable/ic_mic"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/dp_8"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />


                                <EditText
                                    android:id="@+id/suggestion_edit"
                                    style="@style/StyleEditInContainer"
                                    android:hint="@string/suggestions_desc"
                                    android:textSize="@dimen/txtSize"
                                    android:textColorHint="@color/colorDarkGrey"
                                    android:textColor="@color/colorTextBlack"
                                    android:layout_toLeftOf="@id/img_mic_suggestion"
                                    android:inputType="text"
                                    tools:ignore="Autofill"
                                    android:layout_toStartOf="@id/img_mic_suggestion" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_assistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_suggestion"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_5"
                            >
                            <TextView
                                android:id="@+id/assistance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/assistance_requested"
                                android:textSize="@dimen/txtSize"
                                android:textColor="@color/colorTheme"
                                android:layout_marginBottom="@dimen/dp_5"/>

                            <RelativeLayout
                                android:layout_below="@+id/assistance_text"
                                style="@style/StyleEditContainer">
                                <ImageView
                                    android:id="@+id/img_mic_assistance"
                                    style="@style/StyleEditImgInContainer"
                                    android:src="@drawable/ic_mic"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/dp_8"
                                    android:layout_alignParentEnd="true"
                                    tools:ignore="ContentDescription" />


                                <EditText
                                    android:id="@+id/assistance_edit"
                                    style="@style/StyleEditInContainer"
                                    android:hint="@string/assistance_desc"
                                    android:textSize="@dimen/txtSize"
                                    android:textColorHint="@color/colorDarkGrey"
                                    android:textColor="@color/colorTextBlack"
                                    android:layout_toLeftOf="@id/img_mic_assistance"
                                    android:inputType="text"
                                    android:layout_toStartOf="@id/img_mic_assistance"
                                    tools:ignore="Autofill" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/layout_assistance"
                            android:layout_marginTop="@dimen/dp_10"
                            android:background="@drawable/border_bottom_light_grey_1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:weightSum="2"
                                tools:ignore="UselessParent">

                                <EditText
                                    style="@style/StyleEdit"
                                    android:layout_marginTop="0dp"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1.6"
                                    android:gravity="center_vertical"
                                    android:hint="@string/enter_qualification"
                                    android:maxLines="1"
                                    android:textColorHint="@color/colorDarkGrey"
                                    android:textColor="@color/colorTextBlack"
                                    android:id="@+id/qualification_text"
                                    android:layout_marginRight="@dimen/dp_16"
                                    android:inputType="text"
                                    android:layout_marginEnd="@dimen/dp_16"
                                    tools:ignore="Autofill" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.4"
                                    android:gravity="center_vertical"
                                    android:text="@string/self_review"
                                    android:textColor="@color/colorTextBlack"
                                    android:textSize="@dimen/sp_18" />

                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/recycler_self_review_report"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:scrollbars="none"

                        />



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>



        <fragment
            android:id="@+id/container_footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:name="org.ctdworld.propath.fragment.FragmentFooter"/>

    </RelativeLayout>
</LinearLayout>
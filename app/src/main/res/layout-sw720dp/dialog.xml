<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="@color/colorWhite"
        android:background="@drawable/border_transparent_2dp_round_10dp"
        android:layout_marginRight="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_32">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16">

            <TextView
                android:id="@+id/show_message_txt_title"
                android:layout_width="match_parent"
                style="@style/StyleTextView"
                android:gravity="center_horizontal"
                android:text="Title"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/open_sans_bold"/>

            <TextView
                android:id="@+id/show_message_txt_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightBlack"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible"/>


        </LinearLayout>


        <!--buttons-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_weight="2"
        android:background="@drawable/border_top_light_grey_1dp">

        <TextView
            android:id="@+id/show_message_btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            android:gravity="center"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colorLightGrey"/>

        <TextView
            android:id="@+id/show_message_btn_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/btnHeight"
            android:text="OK"
            android:textColor="@color/colorTheme"
            android:textSize="@dimen/sp_16"
            android:gravity="center"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
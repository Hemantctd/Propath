<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/border_bottom_light_grey_1dp"
   >




    <RelativeLayout
        android:id="@+id/profile_layout_add_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >


        <ImageView
            android:id="@+id/question_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_image_add"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />



    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_20">
    <TextView
        android:id="@+id/txt_question_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/txtSize"
        android:paddingBottom="@dimen/dp_10"
        android:text="1."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_5">
    <EditText
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:hint="Enter Question"
        android:textColorHint="@color/colorTheme"
        android:textSize="@dimen/txtSize"
        android:focusable="false"
        android:textColor="@color/colorTheme"
        android:background="@android:color/transparent"/>

    <RadioButton
        android:id="@+id/yes_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Yes"
        android:checked="false"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/colorDarkGrey"
        android:textSize="@dimen/txtSize"
        android:paddingLeft="@dimen/dp_20"
        android:enabled="false"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/colorDarkGrey"
        android:paddingStart="@dimen/dp_20"
        tools:ignore="RtlSymmetry" />
    <RadioButton
        android:id="@+id/no_btn"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No"
        android:checked="false"
        android:theme="@style/AppTheme"
        android:textColorHint="@color/colorDarkGrey"
        android:textSize="@dimen/txtSize"
        android:paddingLeft="@dimen/dp_20"
        android:enabled="false"
        android:textColor="@color/colorDarkGrey"

        android:paddingStart="@dimen/dp_20"
        tools:ignore="RtlSymmetry" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
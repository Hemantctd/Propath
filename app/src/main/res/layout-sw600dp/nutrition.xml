<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <RelativeLayout
        android:id="@+id/nutrition_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom_light_grey_1dp">

        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/StyleImageLightTheme"
            android:id="@+id/recycler_nutrition_img_profile_pic"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brijesh Kumar"
            android:layout_toRightOf="@id/recycler_nutrition_img_profile_pic"
            android:layout_marginLeft="@dimen/dp_16"
            android:textColor="@color/colorTextBlack"
            android:layout_alignTop="@id/recycler_nutrition_img_profile_pic"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/sp_18"
            />

        <TextView
            android:id="@+id/recycler_nutrition_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technology | The Gaurdian"
            android:layout_below="@id/recycler_nutrition_img_profile_pic"
            android:textColor="@color/colorTextBlack"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/recycler_nutrition_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
            android:layout_below="@id/recycler_nutrition_title"
            android:textColor="@color/colorTextBlack"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/sp_12" />

        <!--like and comment-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/recycler_nutrition_message"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/recycler_nutrition_total_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Likes "
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/dp_12" />

            <view
                android:layout_width="@dimen/dp_1"
                android:layout_height="20dp"
                android:background="@color/colorGrey"/>

            <TextView
                android:id="@+id/recycler_nutrition_total_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 comments"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                style="@style/StyleImageLightTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTheme"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <ImageView
                style="@style/StyleImageLightTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTheme"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                style="@style/StyleImageLightTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorTheme"
                android:layout_marginLeft="@dimen/dp_8"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:background="@drawable/dash_textview_bottom_border"
                    android:backgroundTint="@color/colorDashBtnTextBgInjuryManagement"
                    android:text="Injury Management"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"/>

            </LinearLayout>


            <!--match day-->

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColorSecondary">@color/colorIconLightTheme</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>



    <style name="ThemeSpinner" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>


    <style name="StyleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>



    <style name="StyleTextViewWithBottomLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
    </style>

    <style name="StyleDashboardButtonTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">@drawable/dash_textview_bottom_border</item>
        <item name="android:backgroundTint">@color/colorDashBtnTextBgEducation</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleDashboardButtonImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:padding">@dimen/dashImgPadding</item>
    </style>

    <style name="StyleLogo">
        <item name="android:layout_width">@dimen/dp_170</item>
        <item name="android:layout_height">@dimen/dp_170</item>
        <item name="android:src">@drawable/img_logo</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>




    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/dp_18</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="StyleFloatButton">
        <item name="android:layout_width">@dimen/dp_56</item>
        <item name="android:layout_height">@dimen/dp_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:src">@drawable/ic_plus</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="StyleContactTextFirstRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:layout_marginTop">@dimen/dp_3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--to show message to user like error or other message-->
    <style name="styleTxtMessage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:textColor">@color/colorNoConnectionDark</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/title_no_connection</item>
    </style>





    <style name="ThemeSettings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorTheme</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="styleTabTextAppearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@dimen/sp_18</item>
    </style>


    <!--to be used in adapter's item which used CardView-->
    <style name="StyleAdapterCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/dp_3</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">@dimen/dp_4</item>
        <item name="android:layout_marginRight">@dimen/dp_3</item>
        <item name="android:layout_marginLeft">@dimen/dp_3</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="cardBackgroundColor">@color/colorAdapterCardViewBG</item>
    </style>


    <!--to be used in adapter's item which used CardView-->
    <style name="StyleProfileCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">@dimen/dp_3</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">@dimen/dp_4</item>
        <item name="android:layout_marginRight">@dimen/dp_3</item>
        <item name="android:layout_marginLeft">@dimen/dp_3</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="cardBackgroundColor">@color/colorAdapterCardViewBG</item>
    </style>

</resources>

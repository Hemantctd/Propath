    <style name="ThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>


    <style name="ThemeNavigationView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listPreferredItemHeight">70dp</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ThemeChat" parent="AppTheme">
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <!--<style name="ThemeSettings" parent="Theme.AppCompat.Light.NoActionBar">

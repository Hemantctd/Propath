    <style name="StyleFooterImg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/colorIconDarkTheme</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>


    <style name="StyleSpinner" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <!--  <item name="android:dropDownSelector">@drawable/ic_drop_down</item>
  -->
    </style>

    <style name="EditSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/border_round_white</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:layout_marginLeft">@dimen/dp_16</item>
        <item name="android:layout_marginRight">@dimen/dp_16</item>
        <item name="android:layout_marginBottom">@dimen/dp_16</item>

    </style>

    <style name="StyleTextSplashScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/TextSizeSplash</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_30</item>
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">7</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:padding">@dimen/dp_1</item>
    </style>


    <style name="StyleEditContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="StyleEditInContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="StyleImageLightTheme">
        <item name="android:tint">@color/colorIconLightTheme</item>
    </style>

    <style name="StyleImageDarkTheme">
        <item name="android:tint">@color/colorIconDarkTheme</item>
    </style>



    <style name="StyleEditImgInContainer">
        <item name="android:layout_width">@dimen/editContainerHeight</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:paddingTop">@dimen/dp_30</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>-->
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:tint">@color/colorIconLightTheme</item>
        <item name="android:layout_centerVertical">true</item>
    </style>



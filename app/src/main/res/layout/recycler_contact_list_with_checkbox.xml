<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_transparent_2dp_round_10dp"
        android:backgroundTint="@color/colorWhite"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18">

        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/StyleImageLightTheme"
            android:id="@+id/img_user_pic"
            android:layout_height="@dimen/dp_60"
            android:layout_width="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="Name"
            android:textColor="@color/colorTextBlack"
            android:layout_toRightOf="@id/img_user_pic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorIconLightTheme"
            android:layout_marginRight="@dimen/dp_16"/>
    </RelativeLayout>
</LinearLayout>
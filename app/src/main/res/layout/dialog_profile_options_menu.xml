<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="org.ctdworld.propath.fragment.DialogProfileOptionsMenu"
    android:paddingRight="@dimen/dp_16"
    android:paddingLeft="@dimen/dp_16">

    <FrameLayout
        android:id="@+id/contact_options_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/profile_options_menu_create_profile"
        android:layout_width="@dimen/optionsMenuRowWidth"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/border_bottom_light_grey_1dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorTextBlack"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profile_options_menu_add_achievement"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/border_bottom_light_grey_1dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Achievement"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorTextBlack"/>

    </LinearLayout>


</LinearLayout>
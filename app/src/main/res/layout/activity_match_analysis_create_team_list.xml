<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".activity.ActivityMatchAnalysisCreateTeamList">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/footerHeight">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Create Team List"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/txtSizeTitle"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1.2"
                android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                   >




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/border_rectangle_theme_1dp">

                    <EditText
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_bottom_light_grey_1dp"
                        android:hint="1"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textColor="@color/colorTextBlack"/>
                    <EditText
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_bottom_light_grey_1dp"
                        android:hint="2"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textColor="@color/colorTextBlack"/>
                    <EditText
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_bottom_light_grey_1dp"
                        android:hint="3"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textColor="@color/colorTextBlack"/>

                    <EditText
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_bottom_light_grey_1dp"
                        android:hint="4"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textColor="@color/colorTextBlack"/>

                    <EditText
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_bottom_light_grey_1dp"
                        android:hint="5"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textColorHint="@color/colorDarkGrey"
                        android:textColor="@color/colorTextBlack"/>
                    </LinearLayout>







                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Match Code"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/txtSize"
                android:layout_marginRight="@dimen/dp_20"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_group_statistics"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team A"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/txtSize"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="VS"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center"
                    android:textSize="@dimen/dp_22"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"

                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_group_statistics"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team B"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="@dimen/txtSize"
                        android:textAlignment="center"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_5"
                        />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/border_bottom_light_grey_1dp"
                android:paddingBottom="@dimen/dp_5"
                android:hint="1. Name"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorDarkGrey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/border_bottom_light_grey_1dp"
                android:paddingBottom="@dimen/dp_5"
                android:hint="2. Name"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorDarkGrey"/>

                <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/border_bottom_light_grey_1dp"
                android:paddingBottom="@dimen/dp_5"
                android:hint="3. Name "
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorDarkGrey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnHeight"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/border_bottom_light_grey_1dp"
                android:paddingBottom="@dimen/dp_5"
                android:hint="4. Name"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorDarkGrey"/>


            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btnHeight"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_50"
                android:text="Save"
                android:background="@drawable/bg_button"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/btnTextSize"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_50"/>

        </LinearLayout>
        </ScrollView>

        </LinearLayout>



        <fragment
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footerHeight"
            android:layout_alignParentBottom="true"
            android:name="org.ctdworld.propath.fragment.FragmentFooter"/>

    </RelativeLayout>

</LinearLayout>
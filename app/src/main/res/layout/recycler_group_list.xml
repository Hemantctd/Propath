<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <androidx.cardview.widget.CardView
        style="@style/StyleAdapterCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adapterCardViewInnerMargin">

        <RelativeLayout
            android:id="@+id/group_list_layout_go_to_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/img_options_menu"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/img_options_menu">

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/StyleImageLightTheme"
                android:id="@+id/recycler_group_list_img_user_pic"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/ic_profile"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/recycler_group_list_txt_group_name"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@id/recycler_group_list_img_user_pic"
                android:textColor="@color/colorTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_toEndOf="@id/recycler_group_list_img_user_pic" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/img_options_menu"
            style="@style/StyleImageLightTheme"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/ic_options_menu"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/options_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
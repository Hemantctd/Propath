<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ActivityMatchDayFuture3">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_margin="@dimen/dp_16"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="Team A   Vs   Team B"
                        android:textSize="@dimen/sp_20"
                        android:gravity="center"
                        android:textColor="@color/colorTheme"/>



                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team A Name"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_18"
                        android:layout_gravity="center"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=" Match Code "
                        android:layout_marginTop="@dimen/dp_8"
                        android:textSize="@dimen/sp_15"
                        android:layout_gravity="center|center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/border_rectangle_grey1dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="1. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="2. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="3. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                    </LinearLayout>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team B Name"
                        android:layout_marginTop="@dimen/dp_5"
                        android:textSize="@dimen/sp_18"
                        android:layout_gravity="center"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint=" Match Code "
                        android:layout_marginTop="@dimen/dp_8"
                        android:textSize="@dimen/sp_15"
                        android:layout_gravity="center|center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:background="@drawable/border_rectangle_grey1dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp_20">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="1. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="2. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_10">


                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint="3. Name"
                                android:layout_marginRight="@dimen/dp_5"/>

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_bottom_light_grey_1dp"
                                android:paddingBottom="@dimen/dp_7"
                                android:hint=" Number"
                                android:layout_marginLeft="@dimen/dp_5"/>



                        </LinearLayout>

                    </LinearLayout>


                    <Button
                        android:id="@+id/next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:background="@drawable/bg_button"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_18"
                        android:paddingLeft="@dimen/dp_50"
                        android:paddingRight="@dimen/dp_50"/>

                </LinearLayout>


            </ScrollView>





        </LinearLayout>







    </RelativeLayout>

</LinearLayout>